<p id="notice"><%= notice %></p>

<h1>All Products</h1>

<table>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag "products/#{product.image_url}", size: "150x150" %></td>
        <td><span class="product_title"><%= link_to product.title, product_path(product) %></span><%= product.description %></td>
        <td><%= print_price(product.price) %></td>
        <td><%= print_stock(product.stock) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create a New Product', new_product_path, id: 'new-product' %>